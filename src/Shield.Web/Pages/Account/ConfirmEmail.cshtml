@page
@model XkliburSolutions.Shield.Web.Pages.Account.ConfirmEmailModel
@{
}

<h1>Registration Successful!</h1>
@{
    <p>Thank you for registering with us. To complete your registration, please check your email for an approval link. Click the link to verify your email address and activate your account.</p>
    <p>If you don't see the email in your inbox, please check your spam or junk folder. If you still can't find it, you can request a new approval link.</p>
    <p>Thank you for joining us!</p>
    <p>If you have already verified your email, you can <a href="/Account/Login" class="btn btn-primary">Sign in</a> to your account.</p>

    if (@Model.DisplayConfirmAccountLink)
    {
        <!-- Debug section: Only display this if the debug flag is enabled -->
        <div class="alert alert-info">
            <p><strong>Debug Mode:</strong> Click the link below to verify your email address directly.</p>
            <p><a href="@Model.CallbackUrl">Verify Email</a></p>
        </div>
    }  
}
